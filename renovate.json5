{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"docker:pinDigests",
		":renovatePrefix",
		":semanticCommitsDisabled",
	],
	"timezone": "Europe/Amsterdam",
	"enabledManagers": [
		"dockerfile",
	],
	"packageRules": [
		// Pin digests in Dockerfiles, not in docker-compose
		{
			"matchDatasources": [
				"docker",
			],
			"pinDigests": true,
		},
	],
}
